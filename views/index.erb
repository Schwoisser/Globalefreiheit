<script type="text/javascript" language="javascript" src="<%= url('js/main.js') %>"></script>
<span id="output">
	<% @article.each do |article|%>
		<div id=<%=article.title %>>
			<ul>
			<li>
				<a class="link" onclick="load_article('<%="article/"+article.title %>');" href="<%="article/"+article.title %>" title="<%article.title%>">
				<img src="<%= "slider/"+article.Vorschaubildname %>">
				<font size="3"><%=article.title %> </font> <br> 
				<span style="font-weight: 400"><%article.author%><br>
				<p>
					<%=article.description %>
				</p> 			
				</span> 
				</a>
			</li>
			<hr>
			</ul>
		</div>		
	              
	<% end %>
</span>
