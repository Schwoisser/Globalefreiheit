<script type="text/javascript" language="javascript" src="<%= url('js/main.js') %>"></script>
<span id="output">
	<% @article.each do |article|%>
		<div id=<%=article.title %>>
			<ul>
				<a vertical-align="top" style="text-align: top" class="link" onclick="load_article('<%="/article/"+article.title %>');" href="<%="/article/"+article.title %>" title="<%article.title%>">
				<img vertical-align="middle"src="<%= url("slider/"+article.preview_image) %>">
				
				<font vertical-align="middle" style="text-align: right" size="3"><%=article.title %> </font>
				<span vertical-align="middle" style="font-weight: 400"><%=article.author_name%>
				<p vertical-align="middle">
					<%=article.description %>
				</p> 			
				</span> 
				</a>
			</ul>
		</div>		
	              
	<% end %>
</span>
